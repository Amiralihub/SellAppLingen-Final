<!-- res/layout/fragment_manual_input.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/firstNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vorname" />

    <EditText
        android:id="@+id/lastNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nachname" />

    <EditText
        android:id="@+id/streetEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Straße" />

    <EditText
        android:id="@+id/houseNumberEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hausnummer" />

    <Spinner
        android:id="@+id/zipSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lavender"
        android:spinnerMode="dropdown"
        app:iconTint="@color/white" />


    <TextView
        android:id="@+id/cityTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lingen" />


    <!-- Füge hier weitere EditText-Felder für die anderen Order-Informationen hinzu -->

    <Button
        android:id="@+id/confirmManualInputButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lavender"
        android:text="Bestätigen" />

</LinearLayout>
