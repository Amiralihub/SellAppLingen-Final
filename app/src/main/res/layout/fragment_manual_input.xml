<!-- res/layout/fragment_manual_input.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ordersLogo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@android:drawable/ic_menu_compass" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/firstNameEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edittext_bkg"
            android:hint="Vorname *"
            android:padding="8dp" />

    <EditText
        android:id="@+id/lastNameEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:hint="Nachname *"
        android:padding="8dp"
        android:background="@drawable/edittext_bkg" />

    <EditText
        android:id="@+id/streetEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:hint="Straße *"
        android:padding="8dp"
        android:background="@drawable/edittext_bkg" />

    <EditText
        android:id="@+id/houseNumberEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:hint="Hausnummer *"
        android:padding="8dp"
        android:background="@drawable/edittext_bkg" />


    <Spinner
        android:id="@+id/zipSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lavender"
        android:spinnerMode="dropdown"
        app:iconTint="@color/white" />


    <TextView
        android:id="@+id/cityTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Lingen" />

    <Button
        android:id="@+id/confirmManualInputButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lavender"
        android:drawableLeft="@drawable/baseline_check_24"
        android:text="Bestätigen" />

    </LinearLayout>

</LinearLayout>
